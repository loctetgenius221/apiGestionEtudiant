{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Gestion des Étudiants",
        "version": "1.0.0",
        "description": "API pour gérer les étudiants et leurs notes dans une école."
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/api",
            "description": "Serveur de développement"
        }
    ],
    "paths": {
        "/etudiants": {
            "get": {
                "summary": "Liste des étudiants",
                "tags": ["Étudiants"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des étudiants",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Etudiant"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Créer un nouvel étudiant",
                "tags": ["Étudiants"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/EtudiantCreate"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Étudiant créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Etudiant"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/etudiants/{id}": {
            "get": {
                "summary": "Récupérer un étudiant",
                "tags": ["Étudiants"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID de l'étudiant",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Étudiant récupéré avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Etudiant"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Modifier un étudiant",
                "tags": ["Étudiants"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID de l'étudiant",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/EtudiantUpdate"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Étudiant modifié avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Etudiant"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Supprimer un étudiant",
                "tags": ["Étudiants"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID de l'étudiant",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Étudiant supprimé avec succès"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Etudiant": {
                "type": "object",
                "properties": {
                    "prenom": {
                        "type": "string",
                        "example": "Jean"
                    },
                    "nom": {
                        "type": "string",
                        "example": "Dupont"
                    },
                    "adresse": {
                        "type": "string",
                        "example": "10 rue des Lilas"
                    },
                    "telephone": {
                        "type": "integer",
                        "example": 123456789
                    },
                    "date_de_naissance": {
                        "type": "string",
                        "format": "date",
                        "example": "2000-01-01"
                    },
                    "matricule": {
                        "type": "string",
                        "example": "M123456"
                    },
                    "email": {
                        "type": "string",
                        "example": "jean.dupont@example.com"
                    },
                    "mot_de_pass": {
                        "type": "string",
                        "nullable": true,
                        "example": "motdepasse123"
                    },
                    "photo": {
                        "type": "string",
                        "nullable": true,
                        "example": "chemin/vers/photo.jpg"
                    },
                    "deleted_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "required": [
                    "prenom",
                    "nom",
                    "adresse",
                    "telephone",
                    "date_de_naissance",
                    "matricule",
                    "email"
                ]
            },
            "EtudiantCreate": {
                "type": "object",
                "properties": {
                    "prenom": {
                        "type": "string"
                    },
                    "nom": {
                        "type": "string"
                    },
                    "adresse": {
                        "type": "string"
                    },
                    "telephone": {
                        "type": "integer"
                    },
                    "date_de_naissance": {
                        "type": "string",
                        "format": "date"
                    },
                    "matricule": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "mot_de_pass": {
                        "type": "string",
                        "nullable": true
                    },
                    "photo": {
                        "type": "string",
                        "nullable": true
                    }
                },
                "required": [
                    "prenom",
                    "nom",
                    "adresse",
                    "telephone",
                    "date_de_naissance",
                    "matricule",
                    "email"
                ]
            },
            "EtudiantUpdate": {
                "type": "object",
                "properties": {
                    "prenom": {
                        "type": "string"
                    },
                    "nom": {
                        "type": "string"
                    },
                    "adresse": {
                        "type": "string"
                    },
                    "telephone": {
                        "type": "integer"
                    },
                    "date_de_naissance": {
                        "type": "string",
                        "format": "date"
                    },
                    "matricule": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "mot_de_pass": {
                        "type": "string",
                        "nullable": true
                    },
                    "photo": {
                        "type": "string",
                        "nullable": true
                    }
                }
            }
        },
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
